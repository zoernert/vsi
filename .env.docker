# Docker Environment Configuration
# Copy this to .env and modify as needed

# Database (Docker internal networking)
QDRANT_URL=http://qdrant:6333

# Authentication (CHANGE THESE VALUES!)
JWT_SECRET=your-very-secure-jwt-secret-at-least-32-characters-long
API_KEY=your-optional-api-key-for-direct-access

# User Registration Control
ALLOW_SELF_REGISTRATION=false  # Set to true to allow user self-registration
ALLOW_RAPIDAPI_USERS=true      # Set to true to allow RapidAPI users without registration

# Admin Configuration
ADMIN_USERNAME=admin           # Default admin username
ADMIN_PASSWORD=admin123        # Default admin password (CHANGE THIS!)

# Google AI (REQUIRED - Get from Google AI Studio)
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# Server Configuration
PORT=3000
NODE_ENV=production
BASE_URL=http://localhost:3000  # Base URL for API examples (change for production)

# MCP Configuration
MCP_LOG_LEVEL=info

# Optional: Custom Qdrant configuration
# QDRANT_API_KEY=your-qdrant-api-key-if-needed
